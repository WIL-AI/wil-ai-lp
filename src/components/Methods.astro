---
import de from "../i18n/de.json";
import en from "../i18n/en.json";
---

<section
    id="methods"
    class="relative py-24 md:py-32 overflow-hidden bg-white/5 dark:bg-dark-950/20"
>
    <!-- Decorative Background Glow -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-primary-500/5 rounded-full blur-[120px] -z-10"
    >
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center mb-16 reveal">
            <span
                class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold tracking-wider uppercase border border-primary-500/30 text-primary-400 mb-4"
            >
                <span data-lang-de>{de.methods.sectionLabel}</span>
                <span data-lang-en class="hidden"
                    >{en.methods.sectionLabel}</span
                >
            </span>
            <h2 class="section-title text-3xl sm:text-4xl md:text-5xl mb-4">
                <span data-lang-de>{de.methods.title}</span>
                <span data-lang-en class="hidden">{en.methods.title}</span>
            </h2>
            <p class="section-subtitle text-lg md:text-xl max-w-3xl mx-auto">
                <span data-lang-de>{de.methods.subtitle}</span>
                <span data-lang-en class="hidden">{en.methods.subtitle}</span>
            </p>
        </div>

        <!-- Image Container -->
        <div class="relative reveal group">
            <div
                class="absolute -inset-1 bg-gradient-to-r from-primary-500/20 via-accent-400/20 to-primary-500/20 rounded-2xl blur opacity-25 transition duration-1000 group-hover:opacity-40"
            >
            </div>

            <div
                class="relative glass-card overflow-hidden border border-white/10 dark:border-white/5"
            >
                <img
                    src="/wil-ai-lp/wil-ai-tech-cube.jpg"
                    alt="wil-AI Technology Cube"
                    class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-[1.02]"
                />

                <!-- AI Attribution Note -->
                <div
                    class="absolute bottom-4 right-4 bg-black/60 backdrop-blur-md px-3 py-1.5 rounded-lg border border-white/10 text-[10px] md:text-xs text-dark-300 pointer-events-none"
                >
                    <span data-lang-de>{de.methods.aiNote}</span>
                    <span data-lang-en class="hidden">{en.methods.aiNote}</span>
                </div>
            </div>
        </div>
    </div>
</section>
