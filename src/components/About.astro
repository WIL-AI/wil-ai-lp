---
import de from '../i18n/de.json';
import en from '../i18n/en.json';

const icons = {
  handshake: `<svg class="w-8 h-8 icon-animate" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M10.05 4.575a1.575 1.575 0 10-3.15 0v3.15M10.05 4.575a1.575 1.575 0 013.15 0v3.15M10.05 4.575v3.15M3.75 12h.008v.008H3.75V12zm0 0a7.5 7.5 0 0113.5-4.5M3.75 12a7.5 7.5 0 0013.5 4.5M3.75 12H2.25m1.5 0h16.5m0 0H21.75m-1.5 0a7.5 7.5 0 01-13.5 4.5m13.5-4.5a7.5 7.5 0 00-13.5-4.5"/></svg>`,
  shield: `<svg class="w-8 h-8 icon-animate" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/></svg>`,
  layers: `<svg class="w-8 h-8 icon-animate" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3"/></svg>`,
  users: `<svg class="w-8 h-8 icon-animate" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/></svg>`
};
---

<section id="about" class="relative py-24 md:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal">
      <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold tracking-wider uppercase border border-primary-500/30 text-primary-400 mb-4">
        <span data-lang-de>{de.about.sectionLabel}</span>
        <span data-lang-en class="hidden">{en.about.sectionLabel}</span>
      </span>
      <h2 class="section-title text-3xl sm:text-4xl md:text-5xl mb-4">
        <span data-lang-de>{de.about.title}</span>
        <span data-lang-en class="hidden">{en.about.title}</span>
      </h2>
      <p class="section-subtitle text-lg md:text-xl max-w-3xl mx-auto">
        <span data-lang-de>{de.about.description}</span>
        <span data-lang-en class="hidden">{en.about.description}</span>
      </p>
    </div>

    <!-- Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {de.about.cards.map((card, i) => (
        <div class="glass-card p-6 md:p-8 reveal" style={`transition-delay: ${i * 100}ms`}>
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-primary-500/20 to-accent-400/10 flex items-center justify-center mb-5 text-primary-400">
            <Fragment set:html={icons[card.icon as keyof typeof icons]} />
          </div>
          <h3 class="text-lg font-bold text-white mb-2">
            <span data-lang-de>{card.title}</span>
            <span data-lang-en class="hidden">{en.about.cards[i].title}</span>
          </h3>
          <p class="text-dark-400 text-sm leading-relaxed">
            <span data-lang-de>{card.text}</span>
            <span data-lang-en class="hidden">{en.about.cards[i].text}</span>
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
